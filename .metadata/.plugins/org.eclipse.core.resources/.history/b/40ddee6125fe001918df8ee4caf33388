<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.BusinessMapper">

	<select id="save" resultType="com.example.domain.Business">
		insert into
		schedule(name,manageDay,startTime,endTime,title,content)
		values(#{name},#{manageDay},#{startTime},#{endTime},#{title},#{content})
	</select>

	<select id="findOne"
		resultType="com.example.domain.Business">
		select manageDay from schedule where id = #{id}
	</select>

	<select id="findAll"
		resultType="com.example.domain.Business">
		select * from schedule
	</select>

	<select id="findTitle"
		resultType="com.example.domain.Business">
		select * from schedule where manageDay = #{manageDay}
	</select>

	<select id="findId"
		resultType="com.example.domain.Business">
		select * from schedule where id = #{id}
	</select>

	<select id="update"
		resultType="com.example.domain.Business">
		update schedule set
		name=#{name},manageDay=#{manageDay},startTime=#{startTime},
		endTime=#{endTime},title=#{title},content=#{content} where id = #{id}
	</select>

	<select id="delete"
		resultType="com.example.domain.Business">
		delete from schedule where id = #{id}
	</select>

</mapper>