<mapper namespace="com.example.mapper.UserMapper">

	<select id="findUsername" resultType="com.example.entity.Account">
		select * from user where username = #{username}
	</select>

	<select id="saveUser" resultType="com.example.entity.Account">
		insert into user(username,password)values(#{username},#{password})
	</select>

	<select id="findUser" resultType="com.example.entity.Account">
		select * from user where username = #{username}
	</select>

</mapper>